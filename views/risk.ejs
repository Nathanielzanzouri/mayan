        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Risk Report
                        </h1>
                        <ol class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-dashboard"></i>Risk Report
                            </li>
                        </ol>
                    </div>
                </div>

                 <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                       <div class="container">
  <h2>Global Report</h2>
  <div class="table-responsive">           
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Date</th>
        <th>Name</th>
        <th>User</th>
        <th>Allocation</th>
        <th>Incomingpnl</th>
        <th>Tradingpnl</th>
        <th>Brokerfees</th>
        <th>Delta</th>
        <th>VAR</th>
        <th>Grossexp</th>
        <th>Longpos</th>
        <th>Shortpos</th>
        <th>Industrial</th>
        <th>Basicmaterials</th>
        <th>Technology</th>
        <th>Consumernoncyclial</th>
        <th>Financial</th>
        <th>Utilities</th>
        <th>Communications</th>
        <th>Consumercyclial</th>
        <th>Energy</th>
        <th>Diversified</th>
        <th>Funds</th>
        <th>Other</th>
        <th>Ptfbeta</th>
        <th>Onedayonepctvar</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="x in records">
        <td style="text-align: center">{{x.Id}}</td>
        <td style="text-align: center">{{x.date}}</td>
        <td style="text-align: center">{{x.name}}</td>
        <td style="text-align: center">{{x.user}}</td>
        <td style="text-align: center">{{x.allocation}}</td>
        <td style="text-align: center">{{x.incomingpnl}}</td>
        <td style="text-align: center">{{x.tradingpnl}}</td>
        <td style="text-align: center">{{x.brokerfees}}</td>
        <td style="text-align: center">{{x.delta}}</td>
        <td style="text-align: center">{{x.VAR}}</td>
        <td style="text-align: center">{{x.grossexp}}</td>
        <td style="text-align: center">{{x.longpos}}</td>
        <td style="text-align: center">{{x.shortpos}}</td>
        <td style="text-align: center">{{x.industrial}}</td>
        <td style="text-align: center">{{x.basicmaterials}}</td>
        <td style="text-align: center">{{x.technology}}</td>
        <td style="text-align: center">{{x.consumernoncyclical}}</td>
        <td style="text-align: center">{{x.financial}}</td>
        <td style="text-align: center">{{x.utilities}}</td>
        <td style="text-align: center">{{x.communications}}</td>
        <td style="text-align: center">{{x.consumercyclical}}</td>
        <td style="text-align: center">{{x.energy}}</td>
        <td style="text-align: center">{{x.diversified}}</td>
        <td style="text-align: center">{{x.funds}}</td>
        <td style="text-align: center">{{x.other}}</td>
        <td style="text-align: center">{{x.ptfbeta}}</td>
        <td style="text-align: center">{{x.onedayonepctvar}}</td>
      </tr>
    </tbody>
  </table>
</div>
