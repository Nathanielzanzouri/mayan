<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Mayan Capital</title>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/sb-admin.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- For chart.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.4/Chart.min.js"></script>

     <!-- Angular script -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

<div ng-app="myApp" ng-controller="myCtrl">

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="" class="pull-left"><img src="pictures/logomayan.jpg" style="width: 225px; height: 50px; border: 2px solid #1f4787; "></a> 
            </div>
            
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                   <li>
                        <a href="risk"><i class="fa fa-fw fa-dashboard"></i> Risk report</a>
                    </li>
                    <li>
                        <a href="monitor"><i class="fa fa-fw fa-file"></i> Monitor process</a>
                    </li>
                    <li>
                        <a href="monitorpnl"><i class="fa fa-fw fa-table"></i> Monitor PNL</a>
                    </li>
                    <li>
                        <a href="indicator"><i class="fa fa-fw fa-edit"></i> Indicator</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                           Monitor PNL
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i> Monitor PNL
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-lg-6">
                        <h2>Summary</h2>
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>PNL</th>
                                        <th ng-repeat="x in records"></th>    
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Intraday PNL</td>
                                        <th ng-repeat="x in records">{{x.incomingpnl}}</th>    
                                    </tr>
                                    <tr>
                                        <td>Trading PNL</td>
                                        <th ng-repeat="x in records">{{x.tradingpnl}}</th>
                                    </tr>
                                    <tr>
                                        <td>Net Dollars Exposure</td>
                                        <th ng-repeat="x in records">{{x.delta}}</th>
                                    </tr>
                                    <tr>
                                        <td>Long Dollars Exposure</td>
                                        <th ng-repeat="x in records">{{x.longpos}}</th>
                                    </tr>
                                    <tr>
                                        <td>Short Dollars Exposure</td>
                                        <th ng-repeat="x in records">{{x.shortpos}}</th>
                                    </tr>
                                    <tr>
                                        <td>Portfolio Beta</td>
                                        <th ng-repeat="x in records">{{x.ptfbeta}}</th>
                                    </tr>
                                    <tr>
                                        <td>1-DAY 1% VAR</td>
                                       <th ng-repeat="x in records">{{x.onedayonepctvar}}</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <h2>Sectors Exposure</h2>

                       <canvas id="myChart"></canvas>

                    </div>
                </div>
                <!-- /.row -->

                <div class="row">

                    <div class="col-lg-6">
                        <h2>List of Users</h2>
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="x in records">
                                        <th>{{x.user}}</th>
                                    </tr>
                                </tbody>
                            </table>
                           <button type="button" class="btn btn-primary">Select all</button>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <h2>List of Portfolios</h2>
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="x in records">
                                        <th>{{x.name}}</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                       <button type="button" class="btn btn-primary">Select all</button>
                    </div>
                </div>
                <!-- /.row -->

                
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- myCtrl.js -->
    <script type="text/javascript" src="app.js"></script>

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!--     Chart.js -->
    <script src="js/chart.js"></script>

</body>

</html>
